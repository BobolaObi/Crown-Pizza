<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MakeOrder">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/placeOrderHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="34dp"
        android:text="@string/placeOrderText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingStart="@dimen/imagepadding"
        android:paddingEnd="@dimen/imagepadding"
        tools:src="@drawable/deliveryimge" />

    <TextView
        android:id="@+id/placeOrderContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:padding="@dimen/contentPading"
        android:text="@string/placeOrderContentText"
        android:textColor="@color/black" />




</LinearLayout>